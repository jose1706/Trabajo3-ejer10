    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        double patrimonio, estrato;
        try{
            patrimonio = Double.parseDouble(txtpatrimonio.getText());
            estrato = Double.parseDouble(txtestratosocial.getText());
            jTextField1.setText(String.valueOf(estudiante.pago_matricula(patrimonio, estrato)));
        }catch (NumberFormatException e){
            JOptionPane.showMessageDialog(null, "No se pueden usar letras, revise y vuelva a intentar.");
        }
        
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        txtestratosocial.setText("");
        jTextField1.setText("");
        txtnombres.setText("");
        txtnumeroins.setText("");
        txtpatrimonio.setText("");
    }                                        

